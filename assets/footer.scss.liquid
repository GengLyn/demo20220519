@mixin displayFlex($row:flex-start, $column:stretch, $direction:row, $wrap:nowrap) {
  display: flex;
  justify-content: $row;
  align-items: $column;
  flex-direction: $direction;
  flex-wrap: $wrap;
}

.site-footer{
	background: #144937;
 	color:#ffffff;
  	a{
    	color:#ffffff;
    }
  
  .footer-container{
    width:100%;
  	@include displayFlex();
    padding-top: 86px;
    padding-left:222px;
    padding-right:222px;
    .item{
    	flex: 1;
      	width: 163px;
      	margin:0 10px 100px 10px;
      .title{
		height: 50px;
        font-family: 'Avenir Next LT Pro';
		font-style: normal;
		font-weight: 600;
		font-size: 25px;
		line-height: 50px;
      }
      .link{
      	font-family: 'Avenir Next LT Pro';
		font-style: normal;
		font-weight: 400;
		font-size: 20px;
		line-height: 50px;
        .icon{
        	margin-right:10px;
        }
      }
    }
  }
  .line{
    	margin: 0 110px;
      	height:0px;
      	border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .bottom{
    margin:33.5px 160px 0 160px;
  	@include displayFlex($row:space-between);
    .left{
    	font-weight: 400;
		font-size: 16px;
		line-height: 19px;
    }
    .right{
    	@include displayFlex();
      	.icon{
      		margin-left: 72.8px;
      	}
    }
  }
}